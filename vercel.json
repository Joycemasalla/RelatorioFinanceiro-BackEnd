{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/whatsapp-webhook",
      "destination": "/api/whatsapp-webhook"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build"
}