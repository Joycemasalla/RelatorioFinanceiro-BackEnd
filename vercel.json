{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/api/$1"
    }
  ],
  "builds": [
    {
      "src": "backend/api/whatsapp-webhook.ts",
      "use": "@vercel/node"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "env": {
      "MONGO_URI": "@mongo_uri",
      "WHATSAPP_API_TOKEN": "@whatsapp_api_token",
      "WHATSAPP_VERIFY_TOKEN": "@whatsapp_verify_token"
  }
}