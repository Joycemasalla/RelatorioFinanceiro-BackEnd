{
  "functions": {
    "api/whatsapp-webhook.ts": {
      "includeFiles": "src/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/whatsapp-webhook",
      "destination": "/api/whatsapp-webhook"
    }
  ],
  "build": {
    "env": {
      "MONGO_URI": "@mongo_uri",
      "WHATSAPP_API_TOKEN": "@whatsapp_api_token",
      "WHATSAPP_VERIFY_TOKEN": "@whatsapp_verify_token"
    }
  }
}