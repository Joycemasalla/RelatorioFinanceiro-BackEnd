{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    }
  ],
  "env": {
    "WHATSAPP_API_TOKEN": "@whatsapp_api_token",
    "WHATSAPP_VERIFY_TOKEN": "@whatsapp_verify_token", 
    "MONGO_URI": "@mongo_uri"
  }
}